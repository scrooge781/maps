<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/small_image_vm"
        android:layout_width="65dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_small_vm" />

    <TextView
        android:id="@+id/text_name_vm"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Карта Менде Тамбовской губернии 1860 г"
        app:layout_constraintStart_toEndOf="@+id/small_image_vm"
        app:layout_constraintTop_toTopOf="@+id/small_image_vm" />


</androidx.constraintlayout.widget.ConstraintLayout>