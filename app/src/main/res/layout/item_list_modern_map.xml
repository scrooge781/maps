<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="36dp">

    <FrameLayout
        android:id="@+id/frameLayoutModernMap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/enable_element_modern_map"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/modernMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/google_maps" />
    </FrameLayout>

    <TextView
        android:id="@+id/nameModerMap"
        style="@style/TextAppearance.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Google"
        android:textColor="@color/accent2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutModernMap" />
</androidx.constraintlayout.widget.ConstraintLayout>